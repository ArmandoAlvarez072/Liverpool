<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Liverpool" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="TextViewSubtitle" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/boldFontColor</item>
        <item name="android:textSize">@dimen/font_size_subtitle</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
    </style>


    <style name="TextViewTitle" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/boldFontColor</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
    </style>

    <style name="TextViewBody" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/fontColor</item>
        <item name="android:textSize">@dimen/font_size_body</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="TextViewBodyBold" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/boldFontColor</item>
        <item name="android:textSize">@dimen/font_size_body</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
    </style>

    <style name="TextViewOfferPrice" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/font_size_body</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="TextViewListPrice" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/fontLightColor</item>
        <item name="android:textSize">@dimen/font_size_body</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="CircularImageView" >
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/common_padding_min</item>
        <item name="boxCornerRadiusBottomStart">@dimen/common_padding_min</item>
        <item name="boxCornerRadiusTopEnd">@dimen/common_padding_min</item>
        <item name="boxCornerRadiusTopStart">@dimen/common_padding_min</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">@dimen/edit_text_stroke_width</item>
        <item name="endIconTint">@color/boldFontColor</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextInputLayoutACTV" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/common_padding_min</item>
        <item name="boxCornerRadiusBottomStart">@dimen/common_padding_min</item>
        <item name="boxCornerRadiusTopEnd">@dimen/common_padding_min</item>
        <item name="boxCornerRadiusTopStart">@dimen/common_padding_min</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">@dimen/edit_text_stroke_width</item>
        <item name="endIconTint">@color/boldFontColor</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/boldFontColor</item>
        <item name="android:textColorHint">@color/fontLightColor</item>
        <item name="android:textSize">@dimen/font_size_body</item>
        <item name="android:padding">@dimen/common_padding_min</item>
    </style>

    <style name="ButtonOk" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/boldFontColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">@dimen/font_size_body</item>
    </style>
</resources>